# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js}]
charset = utf-8

[*.{js,html,css,scss,svelte,ts}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[{package.json,package-lock.json,.travis.yml}]
indent_style = space
indent_size = 2

[{CHANGELOG.md}]
indent_style = space
indent_size = 2
